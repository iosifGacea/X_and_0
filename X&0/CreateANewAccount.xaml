<Window x:Class="X_0.CreateANewAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:X_0"
        mc:Ignorable="d"
        Title="CreateANewAccount" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Text="name :" Grid.Row="0" Background="OldLace" FontFamily="Impact" FontSize="38" Foreground="DarkGreen"/>
        <TextBox x:Name="n" Grid.Row="1" Background="OldLace" FontFamily="Impact" FontSize="38" Foreground="DarkGreen"/>
        <TextBlock Text="password :" Grid.Row="2" Background="OldLace" FontFamily="Impact" FontSize="38" Foreground="DarkGreen"/>
        <TextBox x:Name="p" Grid.Row="3" Background="OldLace" FontFamily="Impact" FontSize="38" Foreground="DarkGreen" />
        <Button Grid.Row="4" Width="280" Height="80" Content="ENTER" Click="Enter_click" Background="OldLace" FontFamily="Impact" FontSize="38" Foreground="DarkGreen"/>
    </Grid>
</Window>
